<h1>Listing Post</h1>
 
<table>
  <tr>
    <th>Title</th>
  </tr>
 
  <% @posts.each do |post| %>
    <tr>
      <td><strong><%= link_to post.title, post_path(post) %> </strong> 
       Created by <%=post.user.email%></td>
      <% if show_paths %>
      	<td><%= link_to 'Edit', edit_post_path(post) %></td>
      	<td><%= link_to 'Destroy', post_path(post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <%end%>
    </tr>
  <% end %>
</table>